<Dialog xmlns="sap.m" xmlns:core="sap.ui.core" title="{i18n>forgotPassDialogTitle}" afterClose="destroyDialog">
	<content>
		<HBox alignItems="Center" justifyContent="Center">
			<items>
				<core:Icon src="sap-icon://email" size="2em" color="#d52941" class="sapUiTinyMargin" />
				<Input placeholder="{i18n>forgotPassField}" type="Email" id="txtForgotEmail" />
			</items>
		</HBox>
	</content>
	<beginButton>
		<Button text="{i18n>btnRecoverPass}" type="Emphasized" press="onRecoverPass" />
	</beginButton>
	<endButton>
		<Button text="{i18n>btnCancel}" press="closeDialog" />
	</endButton>
</Dialog>