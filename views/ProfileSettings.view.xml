<mvc:View
	controllerName="lookfood.resources.Lookfood.controllers.ProfileSettings"
	xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<m:Page id="pageAccountSettings"
		title="{i18n>settingsPageTitle}"
		showHeader="true"
		showNavButton="true"		
        navButtonPress="onNavBack">
		<m:headerContent>
            <m:Button id="btGrid" icon="sap-icon://grid" press="onGrid" />
        </m:headerContent>
		<ObjectPageLayout
			id="objectPageLayout">
			<headerTitle>
				<ObjectPageHeader
					objectImageURI=""	
					objectImageShape="Circle"
					objectTitle="{i18n>settingsHeaderTitle}"
					objectSubtitle="{i18n>settingsHeaderSubtitle}">
					<actions>
						<!-- <ObjectPageHeaderActionButton
							id="save"
							text="{i18n>save}"
							hideText="false"
							press="onSavePressed"
							type="Emphasized"/>
						<ObjectPageHeaderActionButton
							id="cancel"
							text="{i18n>cancel}"
							press="onCancelPressed"
							hideText="false"/> -->
					</actions>
				</ObjectPageHeader>
			</headerTitle>
			<headerContent>
				<m:MessageStrip
					text="{
						parts: [
							'i18n>systemSettingsLastLoginTitle',
							'view>/currentUser',
							'view>/lastLogin'
						],
						formatter: 'jQuery.sap.formatMessage'
						}"
					type="Information"
					showIcon="true">
				</m:MessageStrip>
			</headerContent>
			<sections>
				<ObjectPageSection>
				<subSections>
					<ObjectPageSubSection
						id="accountOwnerId"
						title="{i18n>accountOwnerTitle}">
						<blocks>
							<ObjectPageLazyLoader
								id="shopOwnerLazyLoader">
								<f:SimpleForm
									title="{i18n>editOwnerDetailTitle}"
									columnsL="2"
									columnsM="2"
									editable="true"
									layout="ResponsiveGridLayout">
									<f:content>										
										<core:Title text="{i18n>ownerProfile}" />											
											<m:Label
												labelFor="emailInput"
												text="{i18n>mail}"/>
											<m:Input
												id="emailInput"
												type="Email"
												width="100%"
												value="{modelPartnerProfile>/email}"/>
											<m:Label
												text="{i18n>ownerFirstName}"
												labelFor="firstNameInput"/>
											<m:Input
												id="firstNameInput"
												type="Text"
												width="100%"
												value="{modelPartnerProfile>/name}"/>
											<m:Label
												labelFor="lastNameInput"
												text="{i18n>ownerLastName}"/>
											<m:Input
												id="lastNameInput"
												type="Text"
												width="100%"
												value="{modelPartnerProfile>/name}"/>
											<m:Label
												labelFor="addressStreetInput"
												text="{i18n>ownerStreet}"/>
											<m:Input
												id="addressStreetInput"
												type="Text"
												width="100%"
												value="{modelPartnerProfile>/addresses/0/street}"/>
											<m:Label
												labelFor="addressTownInput"
												text="{i18n>ownerZipCode}"/>
											<m:Input
												id="addressTownInput"
												type="Text"
												width="100%"
												value="{modelPartnerProfile>/addresses/0/postcode}"/>
											<m:Label
												labelFor="addressCountryInput"
												text="{i18n>ownerCountry}"/>
											<m:Input
												id="addressCountryInput"
												type="Text"
												width="100%"
												value=""/>
										<core:Title text="{i18n>ownerContact}" />
											<m:Label
												labelFor="phoneNumberInput"
												text="{i18n>ownerMobile}"/>
											<m:Input
												id="phoneNumberInput"
												type="Tel"
												width="100%"
												value="{modelPartnerProfile>/phones/0}"/>
											<m:Label
												labelFor="faxNumberInput"
												text="{i18n>ownerFax}"/>
											<m:Input
												id="faxNumberInput"
												type="Tel"
												width="100%"
												value="{modelPartnerProfile>/phones/1}"/>
									</f:content>
								</f:SimpleForm>
							</ObjectPageLazyLoader>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection
							id="shopConfigurationId"
							title="{i18n>shopConfigurationTitle}">
							<blocks>
								<ObjectPageLazyLoader
									id="shopConfigurationLazyLoader">
									<f:SimpleForm
										title="{i18n>editSystemConfigurationTitle}"
										columnsL="2"
										columnsM="2"
										editable="true"
										layout="ResponsiveGridLayout" >
										<f:content>
											<core:Title text="{i18n>storeSettings}" />
												<m:Label
													labelFor="storeNameInput"
													text="{i18n>storeName}"/>
												<m:Input
													id="storeNameInput"
													type="Text"
													width="100%"
													value=""/>
												<m:Label
													labelFor="storeDefaultLanguageInput"
													text="{i18n>storeDefaultLanguage}"/>
												<m:Input
													id="storeDefaultLanguageInput"
													type="Text"
													width="100%"
													value=""/>
												<m:Label
													labelFor="storeCodeInput"
													text="{i18n>storeCode}"/>
												<m:Input
													id="storeCodeInput"
													type="Text"
													width="100%"
													value="{modelPartnerProfile>/id}"/>
											<core:Title text="{i18n>StoreContact}" />
												<m:Label
													labelFor="storeWebsiteInput"
													text="{i18n>storeWebSite}"/>
												<m:Input
													id="storeWebsiteInput"
													type="Url"
													width="100%"
													value="{modelPartnerProfile>/website}"/>
												<m:Label
													labelFor="storePhoneNumberInput"
													text="{i18n>storePhone}"/>
												<m:Input
													type="Tel"
													id="storePhoneNumberInput"
													width="100%"
													value=""/>
												<m:Label
													labelFor="storeMailInput"
													text="{i18n>mail}"/>
												<m:Input
													type="Email"
													id="storeMailInput"
													width="100%"
													value=""/>
										</f:content>
									</f:SimpleForm>
								</ObjectPageLazyLoader>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:Bar>
				<m:contentRight>
					<m:Button id="edit"   text="{i18n>btnEdit}"   enabled="false" press="handleEditPress" />
					<m:Button id="save"   text="{i18n>btnSave}"   visible="false" press="handleSavePress" type="Emphasized" />
					<m:Button id="cancel" text="{i18n>btnCancel}" visible="false" press="handleCancelPress" />
				</m:contentRight>
			</m:Bar>            
		</m:footer>
	</m:Page>
</mvc:View>
