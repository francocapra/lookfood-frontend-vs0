<mvc:View controllerName="lookfood.resources.Lookfood.controllers.PartnerProfile" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="pagePartnerProfile" 
        title="{i18n>partnerProfileTitle}" 
        showNavButton="true" 
        navButtonPress="onNavBack">
        <headerContent>
            <Button id="btGrid" icon="sap-icon://grid" press="onGrid" />
        </headerContent>
        <footer>
            <Bar>
				<contentRight>
					<Button id="edit"   text="{i18n>btnEdit}"   enabled="false" press="handleEditPress" />
					<Button id="save"   text="{i18n>btnSave}"   visible="false" press="handleSavePress" type="Emphasized" />
					<Button id="cancel" text="{i18n>btnCancel}" visible="false" press="handleCancelPress" />
				</contentRight>
			</Bar>            
        </footer>
    </Page> 

</mvc:View>