<mvc:View controllerName="lookfood.resources.Lookfood.controllers.Login" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		id="pageLogin" 		
		class="sapUiResponsiveContentPadding"
		showHeader="true"
		showSubHeader="false"
		busy="{loginView>/busy}"
		busyIndicatorDelay="{loginView>/delay}" 
		>
		<content id="loginForm">

			<HBox id="HBoxLogo"
				class="sapUiLargeMarginTopBottom"				
				justifyContent="Center">
				<items>
					<Image src="imgs/brand/logo.svg" class="logoImage">
						<layoutData>
							<FlexItemData growFactor="0.1"  />
						</layoutData>
					</Image>							
				</items>
			</HBox>

			<VBox id="VBoxLogin" 
				class="sapUiLargeMarginTopBottom loginGlobalizationSeparator" 
				width="auto"
				alignItems="Center">

				<f:SimpleForm 
					id="SimpleFormLoginTop"
					editable="true"				
					layout="ResponsiveGridLayout"			
					labelSpanXL="12"
					labelSpanL="12"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					columnsS="1"				
					singleContainerFullSize="false" 					
					>
						<f:content>							
							<Label text="{i18n>loginUserLabel}" design="Bold" class="sapUiLargeMarginTop" />
							<Input id="txtUserId" 
								placeholder="{i18n>userInputPlaceholder}" 
								type="Email"
								change="onChangedEmail"/>

							<Label text="{i18n>loginUserPassword}" design="Bold"/>
							<Input id="txtPassword"
								placeholder="{i18n>passwordInputPlaceholder}" 
								type="Password" 
								change="onChangedPassword"/>
							
							<Label labelFor="submitLogin"/> 
							<Button id="submitLogin"
								text="{i18n>btnLogin}" 
								type="Emphasized" 
								press="onLoginBtnPress"/>						
							
						</f:content>
				</f:SimpleForm>
			</VBox>

			<HBox id="HBoxNewUser"											
				justifyContent="Center">
				<items>
					<Text labelFor="linkNewUser" text="{i18n>newUserLabel}" >
						<layoutData>
							<FlexItemData growFactor="0.01"  />
						</layoutData>
					</Text>													
					<Link id="linkNewUser" text="{i18n>newUserLink}" press="onNewUserLinkPress"/>
				</items>
			</HBox>

			<HBox id="HBoxForgotPassword"
				class="sapUiTinyMarginTop"			
				justifyContent="Center">
				<items>
					<Link id="linkForgotPw" text="{i18n>forgotPasswordLabel}" press="onForgotPassLinkPress" /> 	
				</items>
			</HBox>
			
			<HBox id="HBoxLanguage"
				class="sapUiLargeMarginTop loginGlobalizationSeparator" 			
				justifyContent="Center">
				<items>
					<Link text="English" class="sapUiSmallMargin" href="?sap-language=en_US" />
					<Link text="PortuguÃªs" class="sapUiSmallMargin" href="?sap-language=pt_BR" />	
				</items>
			</HBox>
		</content>
	</Page>
</mvc:View>