{
	"_version":"1.8.0",
	"sap.app": {
		"id": "lookfood.resources.main",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "lookfood.resources.Lookfood.views.App",
			"type": "XML",
			"async": true,
			"id": "rootView"
		},
		"dependencies": {
			"minUI5Version": "1.38.0",
			"libs": {
				"sap.ui.core": {
					"minVersion": "1.38.0"
				},
				"sap.m": {
					"minVersion": "1.38.0",
					"lazy": true
				},
				"sap.f": {},	
				"sap.ui.layout": {
					"minVersion": "1.38.0",
					"lazy": true					
				}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "lookfood.resources.Lookfood.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [
				{
					"uri": "css/lookfood.css"
				}
			]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "lookfood.resources.Lookfood.views",
				"controlId": "appRoot",
				"controlAggregation": "pages",
				"transition": "show",
				"bypassed": {
					"target": "notFound"
				},
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "appLogin",
					"target": "login"
				},
				{
					"pattern": "Cockpit",
					"name": "appCockpit",
					"target": "cockpit"
				},
				{
					"pattern":"ProductManagement",
					"name":"appProductManagement",
					"target":"productManagement"
				},
				{
					"pattern":"NewProduct",
					"name":"appNewProduct",
					"target":"newProduct"
				},
				{
					"pattern":"PartnerProfile",
					"name":"appPartnerProfile",
					"target":"partnerProfile"	
				},
				{
					"pattern":"ProfileSettings",
					"name":"appProfileSettings",
					"target":"profileSettings"	
				},
				{
					"pattern":"ReviewMode",
					"name":"appReviewMode",
					"target":"reviewMode"	
				},
				{
					"pattern":"ProductDetails",
					"name":"appProductDetails",
					"target":"productDetails"	
				}
			],
			"targets": {
				"login": {
					"viewId": "login",
					"viewName": "Login",
					"viewLevel" : 1
				},
				"notFound": {
					"viewId": "notFound",
					"viewName": "NotFound"					
				},
				"cockpit": {
					"viewId": "cockpit",
					"viewName": "Cockpit",
					"viewLevel" : 2
				},
				"productManagement":{
					"viewId": "productManagement",
					"viewName": "ProductManagement",
					"viewLevel" : 2					
				},
				"newProduct":{
					"viewId": "newProduct",
					"viewName": "NewProduct",
					"viewLevel" : 2
				},				
				"productDetails":{
					"viewId": "productDetails",
					"viewName": "ProductDetails",
					"viewLevel" : 2
				},
				"partnerProfile":{
					"viewId": "partnerProfile",
					"viewName": "PartnerProfile",
					"viewLevel" : 2
				},				
				"profileSettings":{
					"viewId": "profileSettings",
					"viewName": "ProfileSettings",
					"viewLevel" : 2					
				},
				"reviewMode":{
					"viewId": "reviewMode",
					"viewName": "Review",
					"viewLevel" : 2
				}
			}
		}
	}
}